{
    "openapi": "3.0.0",
    "info": {
        "title": "authentication & authorization tests",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8081",
            "description": "localhost api server"
        }
    ],
    "components": {
        "schemas": {
            "apiResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "readOnly": true
                    },
                    "message": {
                        "type": "string",
                        "readOnly": true
                    },
                    "data": {
                        "type": "object",
                        "readOnly": true,
                        "nullable": true
                    }
                },
                "required": [
                    "success",
                    "message"
                ]
            },
            "authRegistrationRequest": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "readOnly": true,
                        "example": "f7dfed28-ebaa-4bc3-b556-b1787c74e554"
                    },
                    "email": {
                        "type": "string",
                        "readOnly": true,
                        "example": "test@test.com"
                    }
                },
                "required": [
                    "id",
                    "email"
                ],
                "example": {
                    "id": "48f2bd8f-f3c3-45d2-af92-b69d83993e5f",
                    "email": "test@test.com"
                }
            },
            "authRegistrationGetInfoRequest": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "readOnly": true
                    }
                },
                "required": [
                    "id",
                    "email"
                ],
                "example": {
                    "token": "48f2bd8ff3c345d2af92b69d83993e5f"
                }
            },
            "authRegistrationCompleteRequest": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "readOnly": true
                    },
                    "password": {
                        "type": "string",
                        "readOnly": true
                    }
                },
                "required": [
                    "token",
                    "password"
                ],
                "examples": {
                    "id": "48f2bd8f-f3c3-45d2-af92-b69d83993e5f",
                    "password": "some_random_pw"
                }
            },
            "authSigninRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "readOnly": true
                    },
                    "password": {
                        "type": "string",
                        "readOnly": true
                    }
                },
                "required": [
                    "email",
                    "password"
                ],
                "examples": {
                    "email": "tester@mailinator.com",
                    "password": "tester"
                }
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "description": "Bearer authentication",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer"
            }
        }
    },
    "paths": {
        "/auth/register": {
            "summary": "user register",
            "post": {
                "summary": "POST method",
                "tags": ["registration"],
                "operationId": "auth_register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/authRegistrationRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "user successfully registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "user not registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/register/info": {
            "summary": "retrieve registration info",
            "post": {
                "summary": "POST method",
                "tags": ["registration"],
                "operationId": "auth_register_info",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/authRegistrationGetInfoRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "retrieved user registration info",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "readOnly": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "readOnly": true
                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "info": {
                                                    "type": "object",
                                                    "properties": {
                                                        "token": {
                                                            "type": "string",
                                                            "readOnly": true
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "format": "email",
                                                            "readOnly": true
                                                        },
                                                        "created": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "readOnly": true
                                                        }
                                                    },
                                                    "required": [
                                                        "token",
                                                        "email",
                                                        "created"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "info"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "success",
                                        "message",
                                        "data"
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "user not registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/register/complete": {
            "summary": "user register",
            "post": {
                "summary": "POST method",
                "tags": ["registration"],
                "operationId": "auth_register_complete",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/authRegistrationCompleteRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "user successfully registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "user not registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/sign-in": {
            "summary": "user sign in",
            "post": {
                "summary": "POST method",
                "tags": ["authentication"],
                "operationId": "auth_signin",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/authSigninRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "user successfully signed in",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "user not signed in",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/apiResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}